entrypoint = "main.py"
run = ["streamlit", "run", "main.py"]

modules = ["python-3.10"]

hidden = [".pythonlibs", ".streamlit"]

[nix]
channel = "stable-24_05"
packages = ["cargo", "glibcLocales", "libiconv", "rustc"]

[deployment]
run = ["streamlit", "run", "--server.enableCORS=false", "--server.enableWebsocketCompression=false", "--server.runOnSave=false", "main.py"]
ignorePorts = false
deploymentTarget = "gce"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Streamlit App"

[[workflows.workflow]]
name = "Streamlit App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py --server.port=5000 --server.address=0.0.0.0 --server.headless=true"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"
